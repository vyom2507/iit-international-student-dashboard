model Product {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  priceCents  Int
  category    String
  condition   String
  imageUrl    String
  campus      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slug])
  @@index([category])
  @@index([campus])
}

model Order {
  id              String   @id @default(cuid())
  stripeSessionId String   @unique
  amountTotal     Int
  currency        String   @default("usd")
  status          String
  createdAt       DateTime @default(now())
}

